<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>openshift-demo</groupId>
    <artifactId>cloud-profile-server</artifactId>
    <packaging>pom</packaging>
    <version>1.0</version>
    <name>Provision a wildfly cloud-profile server</name>
  
    <description>A cloud-profile server</description>

    <licenses>
        <license>
            <name>Apache License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.html</url>
            <distribution>repo</distribution>
        </license>
    </licenses>
    
    <properties>
        <version.org.wildfly.galleon.s2i>${env.WILDFLY_VERSION}</version.org.wildfly.galleon.s2i>
        <version.org.jboss.galleon>${env.GALLEON_VERSION}</version.org.jboss.galleon>
    </properties>
    
    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.jboss.galleon</groupId>
                    <artifactId>galleon-maven-plugin</artifactId>
                    <version>${version.org.jboss.galleon}</version>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <groupId>org.jboss.galleon</groupId>
                <artifactId>galleon-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>wildfly-provisioning-jaxrs</id>
                        <goals>
                            <goal>provision</goal>
                        </goals>
                        <phase>compile</phase>
                        <configuration>
                            <install-dir>${project.build.directory}/server</install-dir>
                            <record-state>true</record-state>
                            <offline>true</offline>
                            <plugin-options>
                                <!-- required when running on JDK 11 -->
                                <jboss-fork-embedded>true</jboss-fork-embedded>
                                <optional-packages>passive+</optional-packages>
                            </plugin-options>
                            <feature-packs>
                                <feature-pack>
                                    <groupId>org.wildfly.galleon.s2i</groupId>
                                    <artifactId>wildfly-s2i-galleon-pack</artifactId>
                                    <version>${version.org.wildfly.galleon.s2i}</version>
                                    <inherit-packages>false</inherit-packages>
                                    <inherit-configs>false</inherit-configs>
                                </feature-pack>
                            </feature-packs>
                            <customConfig>config.xml</customConfig>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
